<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calc_btn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/Calc_btn"
            android:text="C" />

        <Button
            android:id="@+id/btnDiv"
            style="@style/Calc_btn"
            android:text="/" />

        <Button
            style="@style/Calc_btn"
            android:text="*" />

        <Button
            style="@style/Calc_btn"
            android:text="<" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="7" />

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="8" />

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="9" />

        <Button
            style="@style/Calc_btn"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="4" />

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="5" />

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="6" />

        <Button
            style="@style/Calc_btn"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="1" />

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="2" />

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="3" />

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Calc_btn"
                android:layout_weight="1"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>